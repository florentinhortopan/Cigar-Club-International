# App
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=changeme-long-random-string-at-least-32-chars
NODE_ENV=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/humidor_club

# Email (Resend)
RESEND_API_KEY=re_your_key_here
EMAIL_FROM="Humidor Club <no-reply@yourdomain.com>"

# Storage (Supabase or Cloudflare R2)
SUPABASE_URL=https://xxx.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Optional: Redis for caching and rate limiting
UPSTASH_REDIS_REST_URL=https://xxx.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_token_here

# Optional: Error tracking
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# Cron job secret
CRON_SECRET=your_random_secret_for_cron_jobs
