// Prisma schema for NextAuth + App Data
// Using PostgreSQL for production (Supabase)
// SQLite can still be used locally by changing DATABASE_URL

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// NextAuth.js Models
// https://next-auth.js.org/adapters/prisma

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id               String    @id @default(cuid())
  name             String?
  email            String?   @unique
  emailVerified    DateTime?
  image            String?
  branch_id        String? // Branch/location the user belongs to
  branch           Branch?   @relation(fields: [branch_id], references: [id], onDelete: SetNull)
  accounts         Account[]
  sessions         Session[]
  created_branches Branch[]  @relation("BranchCreator") // Branches created by this user
  pairings         Pairing[]
  activities       Activity[]
  listings         Listing[]
  humidorItems     HumidorItem[]

  @@index([branch_id])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// =============================================================================
// BRANCHES / LOCATIONS
// =============================================================================

model Branch {
  id               String   @id @default(cuid())
  name             String // e.g., "New York Chapter", "London Branch"
  slug             String   @unique // URL-friendly identifier: "new-york", "london"
  city             String?
  region           String? // State/Province
  country          String?
  description      String?  @db.Text // Branch description
  homepage_content String?  @db.Text // Custom homepage content (markdown or HTML)
  logo_url         String?
  banner_url       String?
  contact_email    String?
  website          String?
  created_by_id    String // User who created this branch
  created_by       User     @relation("BranchCreator", fields: [created_by_id], references: [id], onDelete: Restrict)
  is_active        Boolean  @default(true)
  member_count     Int      @default(0) // Cached count of members
  created_at       DateTime @default(now())
  updated_at       DateTime @updatedAt

  members User[] // Users belonging to this branch

  @@index([slug])
  @@index([country, city])
  @@index([is_active])
}

// =============================================================================
// APP DATA MODELS
// =============================================================================

model Brand {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  country     String?
  founded     Int?
  description String?
  website     String?
  logo_url    String?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  lines Line[]

  @@index([name])
  @@index([slug])
}

model Line {
  id           String   @id @default(cuid())
  name         String
  slug         String
  brand_id     String
  description  String?
  release_year Int?
  discontinued Boolean  @default(false)
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt

  brand  Brand   @relation(fields: [brand_id], references: [id], onDelete: Cascade)
  cigars Cigar[]

  @@unique([brand_id, slug])
  @@index([brand_id])
}

model Cigar {
  id                   String   @id @default(cuid())
  line_id              String
  vitola               String
  ring_gauge           Int?
  length_mm            Int?
  length_inches        Float?
  wrapper              String?
  binder               String?
  filler               String?
  filler_tobaccos      String? // JSON array as string
  image_urls           String? // JSON array of image URLs: ["/uploads/abc.jpg", ...]
  strength             String? // Mild | Medium-Mild | Medium | Medium-Full | Full
  body                 String? // Light | Medium-Light | Medium | Medium-Full | Full
  msrp_cents           Int?
  typical_street_cents Int?
  country              String?
  factory              String?
  avg_rating           Float?
  total_ratings        Int      @default(0)
  created_at           DateTime @default(now())
  updated_at           DateTime @updatedAt

  line          Line          @relation(fields: [line_id], references: [id], onDelete: Cascade)
  releases      Release[]
  humidorItems  HumidorItem[]
  pairings      Pairing[]
  listings      Listing[]

  @@index([line_id])
}

model Release {
  id         String   @id @default(cuid())
  cigar_id   String
  year       Int
  batch      String?  @default("Regular Production")
  limited    Boolean  @default(false)
  available  Boolean  @default(true)
  notes      String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  cigar Cigar @relation(fields: [cigar_id], references: [id], onDelete: Cascade)

  @@index([cigar_id])
  @@index([year])
}

// =============================================================================
// USER HUMIDOR (Personal Collection)
// =============================================================================

model HumidorItem {
  id                   String    @id @default(cuid())
  user_id              String
  cigar_id             String
  quantity             Int       @default(1)
  purchase_price_cents Int?
  purchase_date        DateTime?
  location             String? // e.g., "Main Humidor", "Travel Case"
  condition            String? // e.g., "Perfect", "Minor Damage"
  notes                String?
  acquired_from        String? // e.g., "Retail", "Trade", "Gift"
  smoked_count         Int       @default(0) // Number of cigars smoked from this item
  last_smoked_date     DateTime? // Date when the last cigar was smoked
  // Marketplace fields
  available_for_sale   Int       @default(0) // Quantity available for sale (0 = not available)
  available_for_trade  Int       @default(0) // Quantity available for trade (0 = not available)
  created_at           DateTime  @default(now())
  updated_at           DateTime  @updatedAt

  user  User  @relation(fields: [user_id], references: [id], onDelete: Cascade)
  cigar Cigar @relation(fields: [cigar_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@index([cigar_id])
  @@index([last_smoked_date])
  @@index([available_for_sale])
  @@index([available_for_trade])
}

enum PairingKind {
  CIGAR
  FOOD
  DRINK
  EVENT
  STYLE
}

model Pairing {
  id          String      @id @default(cuid())
  cigar_id    String
  user_id     String
  kind        PairingKind
  description String      @db.Text
  image_url   String?
  created_at  DateTime    @default(now())
  updated_at  DateTime    @updatedAt

  cigar Cigar @relation(fields: [cigar_id], references: [id], onDelete: Cascade)
  author User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([cigar_id])
  @@index([user_id])
  @@index([created_at])
}

enum ActivityType {
  PAIRING_CREATED
}

model Activity {
  id             String        @id @default(cuid())
  user_id        String
  type           ActivityType
  summary        String
  reference_type String?
  reference_id   String?
  metadata       Json?
  created_at     DateTime      @default(now())

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@index([created_at])
  @@index([type])
}

// =============================================================================
// MARKETPLACE
// =============================================================================

enum ListingType {
  WTS // Want to Sell
  WTB // Want to Buy
  WTT // Want to Trade
}

enum ListingStatus {
  DRAFT
  ACTIVE
  PENDING
  SOLD
  WITHDRAWN
  FROZEN
}

model Listing {
  id          String        @id @default(cuid())
  user_id     String
  user        User          @relation(fields: [user_id], references: [id], onDelete: Cascade)
  
  type        ListingType
  title       String
  description String        @db.Text
  
  // Reference to cigar (optional - can list without specific cigar)
  cigar_id    String?
  cigar       Cigar?        @relation(fields: [cigar_id], references: [id], onDelete: SetNull)
  humidor_item_id String? // Optional: link to humidor item if listing from humidor
  
  // Details
  qty         Int
  condition   String?
  price_cents Int? // In cents, required for WTS, optional for WTT
  currency    String        @default("USD")
  
  // Location & Shipping
  region      String?
  city        String?
  meet_up_only Boolean      @default(true)
  will_ship   Boolean       @default(false)
  
  // Status
  status      ListingStatus @default(DRAFT)
  published_at DateTime?
  sold_at     DateTime?
  frozen_at   DateTime?
  frozen_reason String?
  
  // Media (store image URLs as JSON array)
  image_urls  String? // JSON array of image URLs
  
  // Metrics
  view_count  Int           @default(0)
  
  created_at  DateTime      @default(now())
  updated_at  DateTime      @updatedAt
  
  @@index([user_id, status])
  @@index([status, published_at])
  @@index([type, status])
  @@index([cigar_id])
  @@index([humidor_item_id])
  @@index([region, status])
}
